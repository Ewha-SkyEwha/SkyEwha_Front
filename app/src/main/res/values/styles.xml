<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextInputLayout 공통 스타일 -->
    <style name="TrendieTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="boxBackgroundColor">@color/colorInputBg</item>
        <item name="boxStrokeColor">@color/colorInputStroke</item>
        <item name="hintTextColor">@color/colorInputHint</item>
        <item name="startIconTint">@color/colorPrimaryText</item>
        <item name="endIconTint">@color/colorPrimaryText</item>
    </style>

    <!-- TextInputEditText 공통 스타일 -->
    <style name="TrendieEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
    </style>

    <!-- 카드 공통 스타일 -->
    <style name="Widget.Trendie.MaterialCardView" parent="Widget.Material3.CardView.Filled">
        <item name="strokeWidth">0dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- CTA 공통 버튼 -->
    <style name="TrendieCtaButton" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/cta_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:background">@drawable/rounded_toggle_skyblue_button</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextAppearance.Trendie.Helper" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="Trendie.BrandTitle" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/brand_logo</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

</resources>