<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 앱 기본 테마 -->
    <style name="Theme.Trendie" parent="Theme.Material3.Light.NoActionBar">
        <!-- 배경/서피스 계열 -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <!-- 버튼/핵심 포인트 컬러 -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- 컨테이너 톤 -->
        <item name="colorPrimaryContainer">@color/colorBannerBg</item>
        <item name="colorOnPrimaryContainer">@color/colorPointText</item>

        <!-- 아웃라인 -->
        <item name="colorOutline">@color/colorDivider</item>

        <!-- 카드 기본 스타일 적용 -->
        <item name="materialCardViewStyle">@style/Widget.Trendie.MaterialCardView</item>
    </style>

</resources>