<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Trendie" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <!-- ✅ 다크에서도 버튼 하늘색 유지 -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorPrimaryContainer">@color/colorBannerBg</item>
        <item name="colorOnPrimaryContainer">@color/colorPrimaryText</item>

        <item name="colorOutline">@color/colorDivider</item>

        <item name="materialCardViewStyle">@style/Widget.Trendie.MaterialCardView</item>
    </style>

    <style name="Widget.Trendie.MaterialCardView" parent="Widget.Material3.CardView.Filled">
        <item name="strokeWidth">0dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

</resources>