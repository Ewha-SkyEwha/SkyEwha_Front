<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurface">

    <!-- 상단 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorSurface"
        android:gravity="center_vertical"
        android:paddingStart="16dp">
        <TextView
            android:text="TRENDIE"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유명 님의 영상을 업로드하고\nTRENDIE가 제공하는 피드백 보고서를\n바로 확인해 보세요!"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryText"
            android:gravity="center"/>
        <!-- mp4 안내문구 -->
        <TextView
            android:id="@+id/tvFormatInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* mp4만 업로드할 수 있어요!"
            android:textSize="16sp"
            android:textColor="@color/colorGrey"
            android:layout_margin="10dp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- 제목 입력란 -->
    <EditText
        android:id="@+id/etFeedbackTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="피드백 내역에 저장할 제목 입력"
        android:textSize="16sp"
        android:background="@drawable/rounded_white_button"
        android:padding="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:inputType="text"/>

    <!-- 허용 문자 안내문구 -->
    <TextView
        android:id="@+id/tvCharInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="한글, 영문, 숫자, _만 사용 가능"
        android:textSize="12sp"
        android:textColor="@color/colorGrey"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"/>

    <!-- 영상 업로드 버튼 -->
    <Button
        android:id="@+id/btnUpload"
        android:text="영상 업로드"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryText"
        android:background="@drawable/rounded_toggle_button"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center" />


</LinearLayout>