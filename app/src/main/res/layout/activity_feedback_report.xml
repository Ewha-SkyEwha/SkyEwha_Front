<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurface">

    <!-- 실제 컨텐츠 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- PDF로 내보낼 "보고서" 영역 -->
            <LinearLayout
                android:id="@+id/reportContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/fbToolbar"
                    layout="@layout/view_simple_toolbar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_toggle_button"
                    android:elevation="1dp"
                    android:orientation="vertical"
                    android:padding="18dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="32dp">

                    <TextView
                        android:id="@+id/tvFeedbackGreeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유명 님의 (영상 제목)에 대한\n피드백 보고서가 도착했습니다📨"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimaryText"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <!-- 해시태그 추천 타이틀 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="# 해시태그 추천"
                    android:textStyle="bold"
                    android:textColor="@color/colorIndigo"
                    android:textSize="17sp"
                    android:layout_marginBottom="8dp" />

                <!-- 해시태그 리스트 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_toggle_button"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- 제목 추천 타이틀 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제목 추천"
                    android:textStyle="bold"
                    android:textColor="@color/colorIndigo"
                    android:textSize="17sp"
                    android:layout_marginBottom="8dp" />

                <!-- 제목 추천 리스트 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_toggle_button"
                    android:padding="14dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이 영상에 어울리는 제목은..."
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:text="1. 예시 제목 1"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:text="2. 예시 제목 2"
                        android:textSize="15sp" />
                </LinearLayout>

                <!-- 참고 영상 추천 타이틀 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="참고 영상 추천"
                    android:textStyle="bold"
                    android:textColor="@color/colorIndigo"
                    android:textSize="17sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_toggle_button"
                    android:padding="14dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유튜브 제목1\nurl1"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 내역 저장/PDF 저장 버튼 -->
            <LinearLayout
                android:id="@+id/footerActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnSaveHistory"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="내역에 저장"
                    android:textColor="@color/colorPointText"
                    android:background="@drawable/rounded_button" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp" />

                <Button
                    android:id="@+id/btnSavePdf"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="PDF로 저장"
                    android:textColor="@color/colorPointText"
                    android:background="@drawable/rounded_button" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 로딩 오버레이 -->
    <FrameLayout
        android:id="@+id/progressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true" />

</FrameLayout>