<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- 상단 설정바 -->
    <LinearLayout
        android:id="@+id/mypageToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- 톱니 아이콘 버튼 (터치 48dp) -->
    <ImageButton
        android:id="@+id/btnSettings"
        style="?attr/borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_settings"
        android:contentDescription="@string/settings"
        app:tint="@color/colorPointText" />
    </LinearLayout>

    <!-- 프로필 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="40dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/trendie_logo"
            android:background="@drawable/circle_bg"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:contentDescription="profile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유명"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPointText"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/editNickname"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="닉네임 수정"
            android:layout_marginTop="12dp"
            android:layout_marginStart="3dp"
            android:clickable="true"
            android:focusable="true"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 가입시기 배너 -->
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:background="@color/colorBannerBg"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:elevation="2dp"
        android:padding="0dp">

        <TextView
            android:id="@+id/joinDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="유명 님과 Trendie는\n2025년 03월 02일부터 함께했어요!"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorPointText"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />

    <!-- 정보 항목 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvMemberInfo"
            android:text="회원 정보 관리"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginBottom="20dp"
            android:layout_height="20dp"
            android:layout_width="150dp"/>

        <TextView
            android:id="@+id/tvFeedbackHistory"
            android:text="보고서 피드백 내역"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginBottom="20dp"
            android:layout_height="20dp"
            android:layout_width="150dp"/>

        <TextView
            android:id="@+id/tvPreferenceHistory"
            android:text="선호도 조사 내역 확인"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_height="20dp"
            android:layout_width="150dp"/>
    </LinearLayout>

    <!-- 여백을 위해 weight 사용 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
