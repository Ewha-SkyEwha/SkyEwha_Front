<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="24dp">

    <!-- 상단 로고 -->
    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/trendie_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- 프로그레스바 -->
    <LinearLayout
        android:id="@+id/progressLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/splashLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <View
            android:layout_width="28dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/progress_on" />

        <View
            android:layout_width="28dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/progress_off" />

        <View
            android:layout_width="28dp"
            android:layout_height="10dp"
            android:background="@drawable/progress_off" />
    </LinearLayout>

    <!-- 안내문 -->
    <LinearLayout
        android:id="@+id/centerBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/nickname_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나만의 닉네임을 정해 보세요!"
            android:textSize="24sp"
            android:textColor="@color/colorIndigo"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tvNicknameGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2~10자, 한글/영문/숫자만 입력할 수 있어요"
            android:textSize="14sp"
            android:textColor="@color/colorIndigo"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- 닉네임 입력창 -->
    <EditText
        android:id="@+id/editNickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="닉네임 입력"
        android:background="@drawable/rounded_white_button"
        android:padding="12dp"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/centerBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- 에러문 -->
    <TextView
        android:id="@+id/tvNicknameError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/colorError"
        app:layout_constraintTop_toBottomOf="@id/editNickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"/>

    <!-- 계속하기 버튼 -->
    <Button
        android:id="@+id/btnNextFromNickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="계속하기"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryText"
        android:background="@drawable/rounded_white_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"
        android:enabled="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>